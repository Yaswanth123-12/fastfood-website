<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="website icon" type="png"
    href="https://t4.ftcdn.net/jpg/03/38/53/45/360_F_338534551_Rsv1pxY28g0dhFfeD7ule82Mrbi6yasF.jpg">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: inherit;
        }

        body {
            /* background-color: #f7f1eb; */
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
            gap: 20px;
        }

        .details {
            width: 43%;
            height: 59vh;
            background-color: #fff;
            padding: 2vw;
            border-radius: 3%;
            box-shadow: rgba(0, 0, 0, 0.2) 0px 1px 3px 0px, rgba(27, 31, 35, 0.2) 0px 0px 0px 1px;
        }

        .payment-details {
            display: flex;
            gap: 39px;
            width: 43%;
            height: 59vh;
            background-color: #fff;
            box-shadow: rgba(0, 0, 0, 0.2) 0px 1px 3px 0px, rgba(27, 31, 35, 0.2) 0px 0px 0px 1px;
            padding: 2vw;
            border-radius: 3%;
        }

        .checkbox {
            display: flex;
            justify-content: space-evenly;
            align-items: center;
            width: 45%;
            height: 10vh;
            background: #FFF;
        }

        /* .payment{
            width: 25rem;
        } */
    </style>
</head>

<body>
    <div class="logo"><a href="/home"><img
                src="https://cdn.glitch.global/1fe29a7d-73cd-4242-880d-c67fb794c0fe/food.png?v=1692977430389"
                alt=""></a></div>
    <div class="details">
        <h2>Delivery information</h2>
        <form class="row g-3">
            <div class="col-md-6">
                <label for="inputEmail4" class="form-label">Name</label>
                <input type="text" class="form-control" id="inputEmail4">
            </div>
            <div class="col-md-6">
                <label for="inputPassword4" class="form-label">Mobile Number</label>
                <input type="text" class="form-control" id="inputPassword4">
            </div>
            <div class="col-12">
                <label for="inputAddress" class="form-label">Address</label>
                <input type="text" class="form-control" id="inputAddress" placeholder="1234 Main St">
            </div>
            <div class="col-12">
                <label for="inputAddress1" class="form-label">Address 2</label>
                <input type="text" class="form-control" id="inputAddress1" placeholder="Apartment, studio, or floor">
            </div>
            <div class="col-md-6">
                <label for="inputCity" class="form-label">City</label>
                <input type="text" class="form-control" id="inputCity">
            </div>
            <div class="col-md-4">
                <label for="inputState" class="form-label">State</label>
                <select id="inputState" class="form-select">
                    <option selected>Choose...</option>
                    <option>Andhra Pradesh</option>
                    <option>Tamil Nadu</option>
                    <option>Telangana</option>
                    <option>Himachal Pradesh</option>
                    <option>Goa</option>
                    <option>Assam</option>
                    <option>Maharashtra</option>
                    <option>Chhattisgarh</option>
                    <option>Gujarat</option>
                    <option>Karnataka</option>
                    <option>Kerala</option>
                </select>
            </div>
            <div class="col-md-2">
                <label for="inputZip" class="form-label">Zip</label>
                <input type="text" class="form-control" id="inputZip">
            </div>
        </form>
    </div>
    <div class="payment-details">
        <div class="payment">
            <h2>Payment Details</h2>
            <form class="row g-3" method="post" action="paymentverify">
                <div class="col-12">
                    <label for="inputAddress" class="form-label" name="email1">Email address</label>
                    <input type="text" class="form-control" id="inputAddress" placeholder="1234 Main St">
                </div>
                <div class="col-12">
                    <label for="inputAddress" class="form-label">Credit Cart Number</label>
                    <input type="text" class="form-control" id="inputAddress"
                        placeholder=" xxxx    xxxx    xxxx    xxxx" name="cardnumber">
                </div>
                <div class="col-md-6">
                    <label for="inputEmail4" class="form-label">Expiry Date</label>
                    <input type="text" class="form-control" id="inputEmail4" placeholder=" mm / yy" name="expiry">
                </div>
                <div class="col-md-6">
                    <label for="inputPassword4" class="form-label">CVV</label>
                    <input type="text" class="form-control" id="inputPassword4" placeholder="x x x" name="cvv">
                </div>
                <div class="col-12">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="gridCheck"
                            style="border: 1.8px solid #2f2c2c;">
                        <label class="form-check-label" for="gridCheck">
                            I've Promo code
                        </label>
                    </div>
                </div>
                <div class="d-grid gap-2">
                    <button class="btn btn-primary col-md-10 mx-5" type="button" data-bs-toggle="modal"
                        data-bs-target="#staticBackdrop">Submit</button>
                </div>
                <!-- Modal -->
                <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false"
                    tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-header">
                                <small style="color: #da1e1e" id="message"></small>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                    aria-label="Close" onclick="removemessage()"></button>
                            </div>
                            <div class="modal-body">
                                  <h3 id="total" style="color: red;"></h3>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" onclick="removemessage()">Close</button>
                                <button type="button" class="btn btn-primary" onclick="confirm()">Continue</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const totalamount = parseFloat(sessionStorage.getItem("totalamount"));
        document.getElementById("total").innerHTML = "Total Amount : $" + totalamount +".00";
        function confirm(){
             if(totalamount === 0){
                // alert("Before proceeding, please choose a product to add to your cart. It seems your cart is currently empty. ");
                document.getElementById("message").innerHTML="Before proceeding, please choose a product to add to your cart.";
             }
             else{
                window.location.href="/orderconfirm"
             }
             sessionStorage.setItem("totalamount",0);
        }
        function removemessage(){
            document.getElementById("message").innerHTML="";
        }
    </script>
</body>

</html>